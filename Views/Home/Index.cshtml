<!DOCTYPE html>
<html lang="en">
@if (TempData["SuccessMessage"] != null)
{
    <script>
        alert('@TempData["SuccessMessage"]');
    </script>
    Layout = null;
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Municipality Home</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            background-color: white;
            color: black;
        }

        header {
            background-color: navy;
            color: white;
            padding: 20px;
            text-align: center;
        }

            header h1 {
                margin: 0;
            }

        nav {
            background-color: lightgray;
            padding: 10px;
            text-align: center;
        }

            nav a {
                margin: 0 15px;
                text-decoration: none;
                color: black;
                font-weight: bold;
            }

        .container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            padding: 30px;
        }

        .card {
            background-color: white;
            border: 1px solid gray;
            border-radius: 10px;
            padding: 20px;
            text-align: center;
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
            transition: transform 0.2s ease;
        }

            .card:hover {
                transform: scale(1.03);
                cursor: pointer;
            }

            .card h2 {
                margin-bottom: 10px;
            }

        footer {
            background-color: navy;
            color: white;
            text-align: center;
            padding: 15px;
            margin-top: 30px;
        }
    </style>
</head>
<body>

    <header>
        <h1>Welcome to City of Cape Town</h1>
        <p>Serving the Community with Transparency & Care</p>
    </header>

    <nav>
        <a href="#">Home</a>
        <a href="#">About Us</a>
        <a href="#">Contact</a>
    </nav>

    <div class="container">
        <div class="card" onclick="location.href='@Url.Action("ReportView", "Home")'">
            <h2>Report Issues</h2>
            <p>Submit and track local issues such as potholes, streetlights, or waste collection.</p>
        </div>


        <div class="card" onclick="location.href='@Url.Action("Index", "Events")'">
            <h2>Local Events & Announcements</h2>
            <p>View upcoming events and announcements in your area.</p>
        </div>


        <div class="card" onclick="location.href='ServiceStatus.html'">
            <h2>Service Request Status</h2>
            <p>To Be implemented</p>
        </div>
    </div>
</body>
</html>
